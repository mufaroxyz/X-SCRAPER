{
  "compilerOptions": {
    // Language & Version settings
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    // Directory settings
    "outDir": "dist",
    "rootDir": "src",

    // Type-checking settings
    "strict": true,

    // Module resolution settings
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  }
}
